<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <meta charset="UTF-8">
    <title>Javalorant Inbox</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <style>
        body {
            background: #f6f8fc;
        }

        .sidebar {
            height: 100vh;
            background: white;
            border-right: 1px solid #eee;
        }

        .email-item {
            cursor: pointer;
            transition: 0.2s;
            border-bottom: 1px solid #eee;
        }

        .email-item:hover {
            background: #f1f3f4;
        }

        .seen {
            opacity: 0.7;
            background: #fafafa;
        }

        .unseen {
            font-weight: bold;
            background: white;
            border-left: 3px solid #0d6efd;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-light bg-white border-bottom px-4 d-flex justify-content-between">
        <a class="navbar-brand fw-bold text-primary" href="/"><i class="fas fa-paper-plane"></i> Javalorant Mail</a>
        <div class="d-flex align-items-center">
            <span class="text-muted small me-3">
                <%= user %>
            </span>
            <a href="/logout" class="btn btn-outline-danger btn-sm">Logout <i class="fas fa-sign-out-alt"></i></a>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 sidebar p-3">
                <button class="btn btn-primary w-100 mb-3 rounded-pill py-2" data-bs-toggle="modal"
                    data-bs-target="#composeModal">
                    <i class="fas fa-plus"></i> Compose
                </button>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" onclick="loadEmails('INBOX')"><i class="fas fa-inbox"></i>
                            Inbox</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="loadEmails('Sent')"><i class="fas fa-paper-plane"></i>
                            Sent</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="loadEmails('Trash')"><i class="fas fa-trash"></i>
                            Trash</a>
                    </li>
                </ul>
            </div>

            <div class="col-md-10 p-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                        <h5 class="mb-0 text-secondary">
                            <i class="fas fa-envelope"></i> <span id="current-box-title">Inbox</span>
                            <small id="realtime-status" class="text-success small ms-2" style="font-size: 0.6em;">
                                <i class="fas fa-circle fa-beat"></i> Real-time Active
                            </small>
                        </h5>
                        <div>
                            <button class="btn btn-light btn-sm border me-2" onclick="loadEmails(currentBox)">
                                <i class="fas fa-sync-alt"></i> Refresh
                            </button>
                        </div>
                    </div>

                    <div id="email-list" class="list-group list-group-flush">
                        <% emails.forEach(function(email) { %>
                            <div class="list-group-item email-item p-3 <%= email.seen ? 'seen' : 'unseen' %>"
                                onclick="window.location='/read/<%= email.id %>'">
                                <div class="d-flex w-100 justify-content-between">
                                    <span class="mb-1 text-truncate" style="max-width: 200px;">
                                        <%= email.from.replace(/<.*>/, '') %>
                                    </span>
                                    <small class="text-muted">
                                        <%= new Date(email.date).toLocaleDateString('en-US') %>
                                    </small>
                                </div>
                                <p class="mb-1 text-truncate text-dark">
                                    <%= email.subject || '(No Subject)' %>
                                </p>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="composeModal" tabindex="-1">...</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentBox = 'INBOX';

        function loadEmails(boxName) {
            currentBox = boxName;
            $('#current-box-title').text(boxName);

            // Highlight sidebar menu
            $('.nav-link').removeClass('active');
            $(`a[onclick="loadEmails('${boxName}')"]`).addClass('active');

            const url = `/api/emails?box=${boxName}&_=${Date.now()}`;

            $.get(url, function (data) {
                let html = '';
                if (data.length === 0) {
                    html = '<div class="p-4 text-center text-muted">Trống trơn như ví của mày vậy!</div>';
                } else {
                    data.forEach(mail => {
                        let contact = (boxName === 'Sent') ? `To: ${mail.to}` : mail.from;
                        html += `
                        <div class="list-group-item email-item p-3 ${mail.seen ? 'seen' : 'unseen'}" onclick="window.location='/read/${mail.id}'">
                            <div class="d-flex w-100 justify-content-between">
                                <span class="mb-1 text-truncate" style="max-width: 250px;">${contact}</span>
                                <small class="text-muted">${new Date(mail.date).toLocaleTimeString()}</small>
                            </div>
                            <p class="mb-1 text-truncate text-dark">${mail.subject || '(No Subject)'}</p>
                        </div>`;
                    });
                }
                $('#email-list').html(html);
                console.log(`[${new Date().toLocaleTimeString()}] Real-time: Updated ${boxName}`);
            });
        }

        // Tự động quét mỗi 30 giây
        setInterval(() => loadEmails(currentBox), 30000);
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</body>

</html>