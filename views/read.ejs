<!DOCTYPE html>
<html>

<head>
    <title>
        <%= mail.subject %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: #f6f8fc;
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="container mt-3">
        <a href="/" class="btn btn-outline-secondary mb-3"><i class="fas fa-arrow-left"></i> Quay lại Inbox</a>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white p-4 pb-0 border-0">
                <h3 class="mb-3">
                    <%= mail.subject %>
                </h3>
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 40px; height: 40px; font-weight: bold;">
                        <%= mail.from.text.charAt(0).toUpperCase() %>
                    </div>
                    <div class="ms-3">
                        <div class="fw-bold">
                            <%= mail.from.text %>
                        </div>
                        <div class="text-muted small">
                            <%= new Date(mail.date).toLocaleString() %>
                        </div>
                    </div>
                    <div class="ms-auto">
                        <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#replyModal"><i
                                class="fas fa-reply"></i> Trả lời</button>
                    </div>
                </div>
            </div>

            <hr class="mx-4 my-0">

            <div class="card-body p-4">
                <div class="email-content">
                    <%- mail.html ? mail.html : mail.textAsHtml %>
                </div>

                <% if (attachments.length> 0) { %>
                    <div class="mt-4 pt-3 border-top">
                        <h6 class="text-muted"><i class="fas fa-paperclip"></i> File đính kèm (<%= attachments.length %>
                                ):</h6>
                        <% attachments.forEach(file=> { %>
                            <span class="badge bg-light text-dark border p-2 me-1">
                                <%= file %>
                            </span>
                            <% }) %>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>

    <div class="modal fade" id="replyModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Trả lời: <%= mail.from.value[0].address %>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/send" method="POST">
                    <div class="modal-body">
                        <input type="hidden" name="to" value="<%= mail.from.value[0].address %>">
                        <input type="hidden" name="subject" value="Re: <%= mail.subject %>">

                        <div class="mb-3">
                            <label class="form-label text-muted">Đến: <strong>
                                    <%= mail.from.text %>
                                </strong></label>
                        </div>
                        <textarea name="message" class="form-control" rows="8"
                            placeholder="Viết câu trả lời của mày vào đây..." autofocus></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">Gửi trả lời</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>